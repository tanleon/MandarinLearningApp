{
  "compilerOptions": {
    // File layout
    "rootDir": ".",        // changed from "src" to "." so current files are included
    "outDir": "dist",

    // Environment
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,       // âœ… allows import express from "express"
    "forceConsistentCasingInFileNames": true,

    // Type checking
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // Node types
    "types": ["node"],

    // Source maps & declarations
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["**/*.ts"],     // ensure all TS files in the backend are compiled
  "exclude": ["node_modules", "dist"]
}
